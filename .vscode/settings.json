{
  // editor
  "editor.formatOnPaste": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": true,
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  // javascript
  "javascript.suggestionActions.enabled": false,
  // typescript
  "typescript.suggestionActions.enabled": false,
  // thunder-client
  "thunder-client.saveToWorkspace": true,
  // files
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".coverage": true,
    ".nyc_output": true,
    "thunder-tests": true,
    "**/.gitkeep": true,
    ".npmrc":true
  },
  // barrelr
  "barrelr.lineEnding": "LF",
  "cSpell.language": "pt-BR",
  "conventionalCommits.scopes": [
    "connection.js",
    "app.js",
    "index dos Controllers",
    "products.controller.js",
    "index.js dos models",
    "products.model.js",
    "index.js das rotas ",
    "products.router.js",
    "index.js dos services",
    "products.service.js",
    "schema.js",
    "validateProductsId.js",
    "sales.controller.js",
    "validateSales.middleware.js"
  ]
}
